extends layout.pug

block content
    section.posts-section
        each post in pagination.files
            article.post
                div.post__header
                    a(href=`${site.baseUrl}${post.path}`)
                        time.post__date #{post.date.toLocaleDateString('en-US', {day: 'numeric', month: 'long', year: 'numeric'})}
                        //- a(href=`${site.baseUrl}${post.path}`).post__title 
                        h3.post__title #{post.title}

                if post.excerpt
                    div.post__excerpt
                        p #{post.excerpt}
                
                div.post__read-link
                    a(href=`${site.baseUrl}${post.path}`) Read more

    nav.pagination
        if pagination.previous
            a(href=`${site.baseUrl}${pagination.previous.path}`).pagination__previous.pagination_available Newer
        else
            a.pagination__previous.pagination_disabled Newer
            
        a.pagination__current Page #{pagination.num} of #{pagination.pages.length}

        if pagination.next
            a(href=`${site.baseUrl}${pagination.next.path}`).pagination__next.pagination_available Older
        else
            a.pagination__next.pagination_disabled Older