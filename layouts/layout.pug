        title #{site.title}
        meta(name='description', content=site.description)
        link(rel='stylesheet', href=`${site.baseUrl}css/main.css`)
    body
        header
            nav
                a.logo(href='#') #{site.title}
                ul
                    li 
                        a(href='#').navigation_active posts
                    li
                        a(href='#') about
        div
            block content