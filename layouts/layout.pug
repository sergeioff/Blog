doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        title #{site.title}
        meta(name='description', content=site.description)
        link(rel='stylesheet', href=`${site.baseUrl}css/main.css`)
    body
        div.center-wrapper
            header.header
                div.logo
                    a(href='#') #{site.title}
                nav.navigation
                    ul
                        li 
                            a(href='#').navigation_active Posts
                        li
                            a(href='#') About
            block content